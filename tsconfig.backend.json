{
  "compilerOptions": {
    "target": "es2022",
    "types": ["node"],
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "distBackend",
    "rootDir": "./src/backend"
  },
  "compileOnSave": true,
  "include": ["src/backend/**/*"]
}
